<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Ausgewählter Zustand: Rot mit Umrandung -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#acf756"/>
            <stroke
                android:width="3dp"
                android:color="#589f08"/>
            <corners
                android:radius="12dp" />
        </shape>
    </item>

    <!-- Gedrückter Zustand: Rot mit Umrandung -->
    <!--item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#F44336"/>
            <stroke
                android:width="3dp"
                android:color="#f71641"/>
            <corners android:radius="4dp"/>
        </shape>
    </item-->

    <!-- Normaler Zustand: Nur Rot ohne Umrandung -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#acf756"/>
            <corners
                android:radius="12dp" />
        </shape>
    </item>

</selector>